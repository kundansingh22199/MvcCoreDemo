@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}
<div class="container-fluid">
    <div class="row">
        <form method="Post" action="/Employee/Index">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <label>Employee Signup</label>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-4">
                                <label>Employee Name</label>
                                <input type="text" id="txtName" name="Name" class="form-control" />
                                <input type="text" id="txtId" name="Id" class="form-control" style="display:none" />
                            </div>
                            <div class="col-sm-4">
                                <label>Email</label>
                                <input type="email" id="txtEmail" name="Email" class="form-control" />
                            </div>
                            <div class="col-sm-4">
                                <label>Mobile No</label>
                                <input type="text" id="txtMobile" name="Mobile" class="form-control" />
                            </div>
                            <div class="col-sm-4">
                                <label>Dob</label>
                                <input type="date" id="txtDob" name="Dob" class="form-control" />
                            </div>
                            <div class="col-sm-4">
                                <label>State</label>
                                <select id="ddlState" name="State" class="form-control statelist">
                                </select>
                            </div>
                            <div class="col-sm-4">
                                <label>City</label>
                                <select id="ddlCity" Name="City" class="form-control citylist">
                                </select>
                            </div>
                            @* <div class="col-sm-4">
                            <label>Address</label>
                            <input type="text" aria-multiline="true" id="txtAdd" name="Address" class="form-control" />
                            </div> *@
                        </div>
                    </div>
                    <div class="card-footer">
                        <input type="button" class="btn btn-primary" value="Insert" id="btnInsert" />
                        <input type="button" class="btn btn-primary" value="Update" id="btnUpdate" style="display:none" />
                    </div>
                </div>
            </div>
